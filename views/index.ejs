<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TASK APP</title>
    <link rel="icon" href="/css/images/memo.png">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">TASK APP</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>リスト</h1>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>TASK</span>
        </div>
        <ul class="table-body">
          <% if (items && items.length > 0) { %>
            <% items.forEach((item) => { %>
              <li>
                <div class="item-data">
                  <span class="id-column"><%= item.id %></span>
                  <span class="name-column"><%= item.name %></span>
                </div>
                <div class="item-menu">
                  <form action="/delete/<%= item.id %>" method="post">
                    <input type="submit" value="完了">
                  </form>
                  <a href="/edit/<%= item.id %>">編集</a>
                </div>
              </li>
            <% }) %>
            <% } else { %>
              <p>No items found.</p>
            <% } %>
        </ul>
        <a href="/new" class="new-button">+</a>
      </div>
    </div>
  </body>
</html>